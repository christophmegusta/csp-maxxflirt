<%
pageClass = "home"
%>
<% include ejs/include/header.ejs %>

<section class="form-box">
    <h2 class="label-offset">Login</h2>
    <form action="" role="form" id="loginForm" method="post" 
        accept-charset="utf-8">
        <div class="form-group" id="emailGroup">
            <label for="inputEmail" class="form-label">Username / Email:</label>
            <input name="inputEmail" class="form-control" id="inputEmail" data-field="email" type="text" required="required">
        </div>
        <div class="form-group" id="passwordGroup">
            <label for="inputPassword" class="form-label">Password:</label>
            <input name="inputPassword" class="form-control" id="inputPassword" data-field="password" type="password" required="required">
        </div>
        
        <div class="form-group form-submit label-offset">
            <button class="btn btn-primary btn-lg">Login</button>
        </div>
        <p class="form-helper-text label-offset">
            Not a member? <a href="index.html" title="Register for FREE!">Register for FREE!</a>
        </p>
        <p class="form-helper-text label-offset">
            <a href="restore.html" title="Forgot your password?">Forgot your password?</a>
        </p>
    </form>
</section>

<% include ejs/include/footer.ejs %>
